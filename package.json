{
  "name": "kadoo",
  "version": "1.0.2",
  "description": "A tool to embed ES6 Javascript code into an UMD module",
  "main": "index.js",
  "bin": {
    "kadoo": "./bin/kadoo.js"
  },
  "scripts": {
    "build": "node ./test/build.js",
    "test": "cross-env NODE_ENV=test nyc --reporter=lcov mocha ./test/main.js",
    "display-coverage": "opener ./coverage/lcov-report/index.html",
    "check-coverage": "nyc check-coverage --statements 0 --branches 0 --functions 0 --lines 0",
    "report-coverage": "nyc report --reporter=text-lcov | coveralls",
    "report": "nyc report",
    "doc": ""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jclo/kadoo.git"
  },
  "keywords": [
    "gulp",
    "IIFE"
  ],
  "author": {
    "name": "Mobilabs",
    "email": "contact@mobilabs.fr",
    "url": "http://www.mobilabs.fr"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jclo/kadoo/issues"
  },
  "homepage": "https://github.com/jclo/kadoo",
  "dependencies": {
    "nopt": "^5.0.0",
    "vinyl": "^2.2.1"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "coveralls": "^3.1.0",
    "cross-env": "^7.0.2",
    "del": "^6.0.0",
    "eslint": "^7.13.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^4.3.0",
    "mocha": "^8.2.1",
    "nyc": "^15.1.0",
    "opener": "^1.5.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "private": false,
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && npm run check-coverage && npm run report"
    }
  }
}
